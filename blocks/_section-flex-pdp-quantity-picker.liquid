{% render 'section.flex-pdp.quantity-picker', product: closest.product %}

{% schema %}
{
  "name": "t:flex_pdp.blocks.quantity_picker.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_inventory_status",
      "label": "t:flex_pdp.blocks.quantity_picker.settings.show_inventory_status.label",
      "default": true
    },
    {
      "type": "number",
      "id": "inventory_threshold",
      "label": "t:flex_pdp.blocks.quantity_picker.settings.inventory_threshold.label",
      "default": 10,
      "visible_if": "{{ block.settings.show_inventory_status }}"
    }
  ],
  "presets": [
    {
      "name": "t:flex_pdp.blocks.quantity_picker.name"
    }
  ]
}
{% endschema %}