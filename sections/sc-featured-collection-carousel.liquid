<script>
  (function() {
    'use strict';
    
    const section = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!section) return;
    
    const carousel = section.querySelector('.sc-fcc-carousel');
    if (!carousel) return;
    
    const track = carousel.querySelector('.sc-fcc-track');
    const slides = carousel.querySelectorAll('.product');
    const prevButton = carousel.querySelector('.sc-fcc-nav-prev');
    const nextButton = carousel.querySelector('.sc-fcc-nav-next');
    const paginationContainer = section.querySelector('.sc-fcc-pagination');
    
    if (!track || !slides.length || !paginationContainer) return;
    
    let currentIndex = 0;
    const isMobile = window.innerWidth <= 768;
    const slidesPerView = isMobile ? 1 : {{ products_per_view }};
    const totalSlides = slides.length;
    const maxIndex = Math.max(0, totalSlides - slidesPerView);
    
    function createPaginationDots() {
      paginationContainer.innerHTML = '';
      const dotsToShow = isMobile ? totalSlides : Math.ceil(totalSlides / slidesPerView);
      
      for (let i = 0; i < dotsToShow; i++) {
        const dot = document.createElement('button');
        dot.type = 'button';
        dot.className = 'sc-fcc-pagination-dot';
        dot.setAttribute('role', 'tab');
        dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
        dot.setAttribute('aria-selected', i === 0 ? 'true' : 'false');
        if (i === 0) dot.classList.add('sc-fcc-active');
        dot.addEventListener('click', () => goToSlide(i * slidesPerView));
        paginationContainer.appendChild(dot);
      }
    }
    
    function updatePagination() {
      const dots = paginationContainer.querySelectorAll('.sc-fcc-pagination-dot');
      const activeDotIndex = isMobile ? currentIndex : Math.floor(currentIndex / slidesPerView);
      
      dots.forEach((dot, index) => {
        const isActive = index === activeDotIndex;
        dot.classList.toggle('sc-fcc-active', isActive);
        dot.setAttribute('aria-selected', isActive ? 'true' : 'false');
      });
    }
    
    function updateNavButtons() {
      if (prevButton) {
        if (currentIndex > 0) {
          prevButton.classList.remove('sc-fcc-hidden');
        } else {
          prevButton.classList.add('sc-fcc-hidden');
        }
      }
      if (nextButton) {
        if (currentIndex < maxIndex) {
          nextButton.classList.remove('sc-fcc-hidden');
        } else {
          nextButton.classList.add('sc-fcc-hidden');
        }
      }
    }
    
    function goToSlide(index) {
      currentIndex = Math.max(0, Math.min(index, maxIndex));
      const slideWidth = 100 / slidesPerView;
      const offset = -currentIndex * slideWidth;
      track.style.transform = `translateX(${offset}%)`;
      updatePagination();
      updateNavButtons();
    }
    
    function handleResize() {
      const nowMobile = window.innerWidth <= 768;
      if (isMobile !== nowMobile) {
        goToSlide(0);
      }
    }
    
    if (prevButton) {
      prevButton.addEventListener('click', () => {
        if (currentIndex > 0) {
          goToSlide(currentIndex - (isMobile ? 1 : slidesPerView));
        }
      });
    }
    
    if (nextButton) {
      nextButton.addEventListener('click', () => {
        if (currentIndex < maxIndex) {
          goToSlide(currentIndex + (isMobile ? 1 : slidesPerView));
        }
      });
    }
    
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(handleResize, 250);
    });
    
    createPaginationDots();
    goToSlide(0);
  })();
</script>

