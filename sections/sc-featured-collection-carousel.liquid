    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All Products Text",
      "default": "View All Products"
    },
    {
      "type": "range",
      "id": "total_products_limit",
      "label": "Total number of products",
      "min": 2,
      "max": 20,
      "step": 1,
      "default": 8
    },
    {
      "type": "range",
      "id": "products_per_view",
      "label": "Products per view (Desktop)",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2,
      "info": "Mobile always shows 1 product"
    }
  ],
  "presets": [
    {
      "category": "Collection",
      "name": "SC Collection Carousel"
    }
  ],
  "disabled_on": {
    "groups": ["*"]
  }
}
