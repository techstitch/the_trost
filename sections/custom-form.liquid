  #myDIV {
    width: 50%;
    padding: 5px;
  }
  .required{border:1px solid #80808070;}
  #green {
    display: none;
    padding: 10px;
  }

  #red {
    display: none;
    padding: 10px;

  }

  input[value="green"]:checked ~ #green {
    display: block;
  }

  input[value="red"]:checked ~ #red {
    display: block;
  }
  .desct{float:left;width:55%;}
  @media (min-width: 320px) and (max-width: 480px) {

    .desct{width:100% !important;}

  }
