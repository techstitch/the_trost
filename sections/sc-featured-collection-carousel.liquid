<div
  data-section-id="{{ section.id }}"
  data-section-type="sc-featured-collection-carousel"
  data-section-index="{{ section.index }}"
>
  {%- liquid
    assign products_per_view = section.settings.products_per_view
    assign products_limit = section.settings.total_products_limit
    assign section_description = section.settings.description
    assign products_collection = section.settings.collection
    assign view_all_link = section.settings.view_all_link
    assign view_all_text = section.settings.view_all_text | default: 'View All Products'
  -%}

  <section class="sc-fcc-section home-section clearfix content-area">
    <div class="sc-fcc-wrapper">
      {% if section_description != blank %}
        <div class="sc-fcc-content">
          {%- assign description_parts = section_description | split: '<a' -%}
          {%- if description_parts.size > 1 -%}
            {%- assign description_text = description_parts[0] -%}
            {{ description_text }}
          {%- else -%}
            {{ section_description }}
          {%- endif -%}
        </div>
      {% endif %}

      {% if products_collection != blank %}
        <div class="sc-fcc-carousel">
          <button class="sc-fcc-nav-button sc-fcc-nav-prev" aria-label="Previous slide" type="button">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
            >
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="sc-fcc-carousel-container">
            <ul class="sc-fcc-track" role="list">
              {% for product in collections[products_collection].products limit: products_limit %}
                {% render 'product-carousel-item',
                  product: product,
                  collection: products_collection,
                  forloop: forloop,
                  onboarding: false
                %}
              {% endfor %}
            </ul>
          </div>
          <button class="sc-fcc-nav-button sc-fcc-nav-next" aria-label="Next slide" type="button">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
            >
              <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          {%- assign description_parts = section_description | split: '<a' -%}
          {%- if description_parts.size > 1 -%}
            {%- assign link_html = '<a' | append: description_parts[1] | split: '</a>' | first | append: '</a>' -%}
            <div class="sc-fcc-view-all-desktop">
              {{ link_html }}
            </div>
          {%- endif -%}
          {% if view_all_link != blank %}
            <div class="sc-fcc-view-all-mobile">
              <a href="{{ view_all_link }}" class="sc-fcc-view-all-link">
                {{ view_all_text }}
                <span class="sc-fcc-arrow" aria-hidden="true">></span>
              </a>
            </div>
          {% endif %}
        </div>
      {% else %}
        <div class="sc-fcc-carousel">
          <button class="sc-fcc-nav-button sc-fcc-nav-prev" aria-label="Previous slide" type="button">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
            >
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="sc-fcc-carousel-container">
            <ul class="sc-fcc-track" role="list">
              {% for i in (1..products_limit) %}
                {% render 'product-carousel-item', forloop: forloop, onboarding: true %}
              {% endfor %}
            </ul>
          </div>
          <button class="sc-fcc-nav-button sc-fcc-nav-next" aria-label="Next slide" type="button">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
            >
              <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          {%- assign description_parts = section_description | split: '<a' -%}
          {%- if description_parts.size > 1 -%}
            {%- assign link_html = '<a' | append: description_parts[1] | split: '</a>' | first | append: '</a>' -%}
            <div class="sc-fcc-view-all-desktop">
              {{ link_html }}
            </div>
          {%- endif -%}
          {% if view_all_link != blank %}
            <div class="sc-fcc-view-all-mobile">
              <a href="{{ view_all_link }}" class="sc-fcc-view-all-link">
                {{ view_all_text }}
                <span class="sc-fcc-arrow" aria-hidden="true">></span>
              </a>
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
    <div class="sc-fcc-pagination" role="tablist" aria-label="Carousel pagination"></div>
  </section>
</div>

<style>
  [data-section-id="{{ section.id }}"] {
    --sc-fcc-products-per-view: {{ products_per_view }};
  }
</style>

{% stylesheet %}
  .sc-fcc-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 60px;
    align-items: center;
    max-width: 100%;
  }

  .sc-fcc-content {
    flex: 0 0 33.333%;
    text-align: left;
    padding-right: 20px;
  }

  .sc-fcc-content h1 {
    font-size: 36px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 20px;
    color: #000;
  }

  .sc-fcc-content p {
    font-size: 16px;
    line-height: 1.6;
    color: #333;
    margin-bottom: 20px;
  }

  .sc-fcc-content a {
    color: #000;
    text-decoration: none;
    font-weight: 600;
    transition: opacity 0.3s ease;
  }

  .sc-fcc-content a:hover {
    opacity: 0.7;
  }

  .sc-fcc-carousel {
    flex: 0 0 calc(66.667% - 60px);
    position: relative;
    width: 100%;
    overflow: hidden;
    background: #fff;
  }

  .sc-fcc-carousel-container {
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    background: #fff;
    /* margin: 0 40px; */
    /* padding: 0 60px; */
    border-inline: 50px solid #fff;
    width: 100%;
    box-sizing: border-box;
  }

  .sc-fcc-track {
    display: flex;
    transition: transform 0.3s ease-in-out;
    margin: 0;
    padding: 0;
    list-style: none;
    width: 100%;
    will-change: transform;
  }

  .sc-fcc-track .product {
    flex: 0 0 calc(100% / var(--sc-fcc-products-per-view));
    padding: 0 15px;
    box-sizing: border-box;
    min-width: calc(100% / var(--sc-fcc-products-per-view));
    max-width: calc(100% / var(--sc-fcc-products-per-view));
  }

  .sc-fcc-nav-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 12px;
    color: #000;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 3;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    visibility: visible;
    opacity: 1;
  }

  .sc-fcc-nav-button:hover {
    opacity: 0.7;
  }

  .sc-fcc-nav-button.sc-fcc-hidden {
    visibility: hidden;
    opacity: 0;
    pointer-events: none;
  }

  .sc-fcc-nav-prev {
    left: 10px;
  }

  .sc-fcc-nav-next {
    right: 10px;
  }

  .sc-fcc-nav-button svg {
    width: 36px;
    height: 36px;
  }

  .sc-fcc-section {
    position: relative;
  }

  .sc-fcc-pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin-block-start: 50px;
    flex-wrap: nowrap;
    overflow: hidden;
    box-sizing: border-box;
  }

  .sc-fcc-pagination-dot {
    flex: 0 1 auto;
    width: 100%;
    height: 2px;
    border-radius: 0;
    background: #d9d9d9;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    padding: 0;
  }

  .sc-fcc-pagination-dot.sc-fcc-active {
    background: #ce5300;
    flex: 0 1 auto;
  }

  .sc-fcc-view-all-mobile {
    display: none;
  }

  .sc-fcc-view-all-desktop {
    display: block;
    text-align: center;
    margin-top: 24px;
    padding-top: 0;
  }

  .sc-fcc-view-all-desktop a {
    color: #000;
    text-decoration: none;
    font-weight: 600;
    transition: opacity 0.3s ease;
    font-size: 16px;
    display: inline-block;
  }

  .sc-fcc-view-all-desktop a:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
